    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/individual_login_profit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/individual_head_iamge1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.018" />

            <TextView
                android:id="@+id/individual_login_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="userName"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/individual_login_profit"
                app:layout_constraintStart_toEndOf="@+id/individual_login_profit"
                app:layout_constraintTop_toTopOf="@+id/individual_login_profit"
                app:layout_constraintVertical_bias="0.222" />

            <androidx.cardview.widget.CardView
                android:id="@+id/individual_head_cardView"
                android:layout_width="412dp"
                android:layout_height="160dp"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/individual_login_profit">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/individual_card1_yiju"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/individual_card1_yiju"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.105"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.15" />

                    <ImageView
                        android:id="@+id/individual_card1_zhuangshi"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="56dp"
                        android:src="@drawable/individual_card1_zhuangshi"
                        app:layout_constraintBottom_toBottomOf="@+id/individual_card1_yiju"
                        app:layout_constraintStart_toEndOf="@+id/individual_card1_yiju"
                        app:layout_constraintTop_toTopOf="@+id/individual_card1_yiju"
                        app:layout_constraintVertical_bias="1.0" />

                    <ImageView
                        android:id="@+id/individual_card1_quyue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="56dp"
                        android:src="@drawable/individual_card1_quyue"
                        app:layout_constraintBottom_toBottomOf="@+id/individual_card1_zhuangshi"
                        app:layout_constraintStart_toEndOf="@+id/individual_card1_zhuangshi"
                        app:layout_constraintTop_toTopOf="@+id/individual_card1_zhuangshi"
                        app:layout_constraintVertical_bias="1.0" />

                    <ImageView
                        android:id="@+id/individual_card1_zhoubian"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="56dp"
                        android:src="@drawable/individual_card1_zhoubian"
                        app:layout_constraintBottom_toBottomOf="@+id/individual_card1_quyue"
                        app:layout_constraintStart_toEndOf="@+id/individual_card1_quyue"
                        app:layout_constraintTop_toTopOf="@+id/individual_card1_quyue"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageView
                        android:id="@+id/individual_card1_zhuomian"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/individual_card1_zhuomian"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_yiju"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_yiju"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_yiju" />

                    <ImageView
                        android:id="@+id/individual_card1_jinian"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="56dp"
                        android:src="@drawable/individual_card1_jinian"
                        app:layout_constraintBottom_toBottomOf="@+id/individual_card1_zhuomian"
                        app:layout_constraintStart_toEndOf="@+id/individual_card1_zhuomian"
                        app:layout_constraintTop_toTopOf="@+id/individual_card1_zhuomian" />

                    <ImageView
                        android:id="@+id/individual_card1_bianqian"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="56dp"
                        android:src="@drawable/individual_card1_bianqian"
                        app:layout_constraintBottom_toBottomOf="@+id/individual_card1_jinian"
                        app:layout_constraintStart_toEndOf="@+id/individual_card1_jinian"
                        app:layout_constraintTop_toTopOf="@+id/individual_card1_jinian" />

                    <ImageView
                        android:id="@+id/individual_card1_jizhang"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="56dp"
                        android:src="@drawable/individual_card1_jizhang"
                        app:layout_constraintBottom_toBottomOf="@+id/individual_card1_bianqian"
                        app:layout_constraintStart_toEndOf="@+id/individual_card1_bianqian"
                        app:layout_constraintTop_toTopOf="@+id/individual_card1_bianqian" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每日一句"
                        android:textColor="#2c2c2c"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_yiju"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_yiju"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_yiju" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="文化周边"
                        android:textColor="#2c2c2c"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_zhuangshi"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_zhuangshi"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_zhuangshi" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="文化曲乐"
                        android:textColor="#2c2c2c"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_quyue"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_quyue"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_quyue" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周边名胜"
                        android:textColor="#2c2c2c"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_zhoubian"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_zhoubian"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_zhoubian" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="桌面组件"
                        android:textColor="#2c2c2c"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_zhuomian"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_zhuomian"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_zhuomian" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="纪念日"
                        android:textColor="#2c2c2c"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_jinian"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_jinian"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_jinian" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="笺牒纸"
                        android:textColor="#2c2c2c"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_bianqian"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_bianqian"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_bianqian" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="算经商笔"
                        android:textColor="#2c2c2c"
                        app:layout_constraintEnd_toEndOf="@+id/individual_card1_jizhang"
                        app:layout_constraintStart_toStartOf="@+id/individual_card1_jizhang"
                        app:layout_constraintTop_toBottomOf="@+id/individual_card1_jizhang" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/individual_head_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="简介：暂无简介"
                app:layout_constraintEnd_toEndOf="@+id/individual_login_user"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/individual_login_user"
                app:layout_constraintTop_toBottomOf="@+id/individual_login_user" />

            <ImageView
                android:id="@+id/individual_head_vip"
                android:layout_width="21dp"
                android:layout_height="24dp"
                android:src="@drawable/individual_head_vip"
                app:layout_constraintBottom_toBottomOf="@+id/individual_login_user"
                app:layout_constraintStart_toEndOf="@+id/individual_login_user"
                app:layout_constraintTop_toTopOf="@+id/individual_login_user" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="128dp"
                android:background="@drawable/individual_head_card_background"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/individual_login_profit"
                app:layout_constraintStart_toEndOf="@+id/individual_head_introduce"
                app:layout_constraintTop_toTopOf="@+id/individual_login_profit"
                app:layout_constraintVertical_bias="1.0">


                <ImageView
                    android:id="@+id/individual_head_setting_image"
                    android:layout_width="32dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/induvidual_recycler_setting"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="412dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@+id/individual_head_cardView"
                app:layout_constraintHorizontal_bias="0.57"
                app:layout_constraintStart_toStartOf="@+id/individual_head_cardView"
                app:layout_constraintTop_toBottomOf="@+id/individual_history_card1_layout">

                <com.youth.banner.Banner
                    android:id="@+id/individual_card2_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/individual_history_card1_layout"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/individual_card2_background"
                app:layout_constraintStart_toStartOf="@+id/individual_head_cardView"
                app:layout_constraintTop_toBottomOf="@+id/individual_head_cardView">

                <TextView
                    android:id="@+id/individual_history_card1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="历史上的今天"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.098" />


                <TextView
                    android:id="@+id/individual_history_card1_dayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隋炀帝下令开凿大运河"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/individual_history_card1_title"
                    app:layout_constraintStart_toStartOf="@+id/individual_history_card1_title"
                    app:layout_constraintTop_toBottomOf="@+id/individual_history_card1_title" />

                <TextView
                    android:id="@+id/individual_history_card1_description"
                    android:layout_width="169dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:text="隋炀帝修建大运河的工程分4段进行。\n公元605年4月14日（隋大业元年三月二十一日）隋炀帝『命尚书右丞皇甫议发河南、淮北诸郡民，前后百余万，开通济渠』。通济渠起于洛阳城，西引榖（即涧水）、洛水入黄河；又从极清（今河南荥阳县把水镇东北周黄河水向东到洋州（今河南开封），再顺汴水经商丘，折向东南，接通蕲水，经皖北至淮阴入淮水。第一段工程沟通了洛水、黄河和淮河。"
                    android:textColor="#2c2c2c"
                    app:layout_constraintEnd_toEndOf="@+id/individual_history_card1_title"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="@+id/individual_history_card1_title"
                    app:layout_constraintTop_toBottomOf="@+id/individual_history_card1_dayName" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:src="@drawable/individual_history_image1"
                    app:layout_constraintEnd_toEndOf="@+id/individual_history_card1_description"
                    app:layout_constraintTop_toBottomOf="@+id/individual_history_card1_description" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:src="@drawable/individual_history_image1"
                    app:layout_constraintStart_toStartOf="@+id/individual_history_card1_description"
                    app:layout_constraintTop_toBottomOf="@+id/individual_history_card1_description" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/individual_history_card2_layout"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/individual_card2_background"
                app:layout_constraintEnd_toEndOf="@+id/individual_head_cardView"
                app:layout_constraintHorizontal_bias="0.918"
                app:layout_constraintStart_toEndOf="@+id/individual_history_card1_layout"
                app:layout_constraintTop_toBottomOf="@+id/individual_head_cardView">

                <TextView
                    android:id="@+id/individual_history_card2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="你是哪个古人？"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.098" />

                <ImageView
                    android:id="@+id/individual_history_card2_image"
                    android:layout_width="117dp"
                    android:layout_height="85dp"
                    android:src="@drawable/individual_history_card2_image"
                    app:layout_constraintEnd_toEndOf="@+id/individual_history_card2_title"
                    app:layout_constraintStart_toStartOf="@+id/individual_history_card2_title"
                    app:layout_constraintTop_toBottomOf="@+id/individual_history_card2_title" />

                <TextView
                    android:id="@+id/individual_history_card2_description"
                    android:layout_width="166dp"
                    android:layout_height="57dp"
                    android:text="李白，字太白，号青莲居士，祖籍陇西成纪（今甘肃省秦安县），出生于绵州昌隆县青莲乡。唐朝伟大的浪漫主义诗人，凉武昭王李暠九世孙。"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="#2c2c2c"
                    app:layout_constraintEnd_toEndOf="@+id/individual_history_card2_image"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="@+id/individual_history_card2_image"
                    app:layout_constraintTop_toBottomOf="@+id/individual_history_card2_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/individual_login_recycler"
                android:layout_width="match_parent"
                android:layout_height="328dp"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintVertical_bias="1.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>