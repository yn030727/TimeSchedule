<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context=".EnrollActivity">

    <EditText
        android:id="@+id/enroll_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#6f1820"
        android:ems="10"
        android:hint="请再次输入密码"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:textColorHint="#b5b5b5"
        app:layout_constraintEnd_toEndOf="@+id/enroll_password"
        app:layout_constraintTop_toBottomOf="@+id/enroll_password" />

    <EditText
        android:id="@+id/enroll_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:backgroundTint="#6f1820"
        android:ems="10"
        android:hint="请输入账号"
        android:inputType="phone"
        android:maxLines="1"
        android:textColorHint="#b5b5b5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enroll_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#6f1820"
        android:ems="10"
        android:hint="请输用户名"
        android:maxLines="1"
        android:textColorHint="#b5b5b5"
        app:layout_constraintEnd_toEndOf="@+id/enroll_account"
        app:layout_constraintStart_toStartOf="@+id/enroll_account"
        app:layout_constraintTop_toBottomOf="@+id/enroll_account" />

    <EditText
        android:id="@+id/enroll_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#6f1820"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:textColorHint="#b5b5b5"
        app:layout_constraintEnd_toEndOf="@+id/enroll_account"
        app:layout_constraintStart_toStartOf="@+id/enroll_account"
        app:layout_constraintTop_toBottomOf="@+id/enroll_user" />



    <Button
        android:id="@+id/enroll_activity_toenroll"
        android:layout_width="243dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_enroll_background"
        android:text="点 击 注 册"
        android:textColor="#f1f1f1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enroll_password2" />

