<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="430dp"
                android:layout_height="450dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/honor_layout_shape1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/honor_fragment_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连续结绳天数"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.043"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.044" />

                <TextView
                    android:id="@+id/honor_fragment_share_text"
                    android:layout_width="67dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="224dp"
                    android:background="@drawable/honor_layout_shape2"
                    android:gravity="center"
                    android:text="分享 ＞"
                    android:textColor="#f1f1f1"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="@+id/honor_fragment_textview1"
                    app:layout_constraintStart_toEndOf="@+id/honor_fragment_textview1"
                    app:layout_constraintTop_toTopOf="@+id/honor_fragment_textview1"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/honor_fragment_consecutiveDay_text"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="0天"
                    android:textColor="#000"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/honor_fragment_textview1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前结绳天数"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/honor_fragment_consecutiveDay_text"
                    app:layout_constraintStart_toStartOf="@+id/honor_fragment_consecutiveDay_text"
                    app:layout_constraintTop_toBottomOf="@+id/honor_fragment_consecutiveDay_text" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="200dp"
                    android:layout_height="122dp"
                    android:layout_marginEnd="132dp"
                    app:layout_constraintBottom_toBottomOf="@+id/honor_fragment_consecutiveDay_text"
                    app:layout_constraintEnd_toEndOf="@+id/honor_fragment_consecutiveDay_text"
                    app:layout_constraintTop_toTopOf="@+id/honor_fragment_consecutiveDay_text"
                    app:layout_constraintVertical_bias="0.426"
                    app:srcCompat="@drawable/honor_fragment_consecutiveday_image2" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="200dp"
                    android:layout_height="122dp"
                    android:layout_marginStart="132dp"
                    app:layout_constraintBottom_toBottomOf="@+id/honor_fragment_consecutiveDay_text"
                    app:layout_constraintStart_toStartOf="@+id/honor_fragment_consecutiveDay_text"
                    app:layout_constraintTop_toTopOf="@+id/honor_fragment_consecutiveDay_text"
                    app:layout_constraintVertical_bias="0.426"
                    app:srcCompat="@drawable/honor_fragment_consecutiveday_image3" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="369dp"
                    android:layout_height="82dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/honor_layout_shape3"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout">

                    <TextView
                        android:id="@+id/honor_fragment_consecutiveDay_KnottedRope"
                        android:layout_width="339dp"
                        android:layout_height="wrap_content"
                        android:text="原始社会创始的以绳结形式反映客观经济活动及其数量关系的记录方式。"
                        android:textColor="#2c2c2c"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.9"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/honor_layout_shape4"
                    app:layout_constraintEnd_toEndOf="@+id/honor_fragment_textview1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/honor_fragment_textview1"
                    app:layout_constraintTop_toBottomOf="@+id/honor_fragment_textview1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:background="@drawable/honor_fragment_consecutiveday_image4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/honor_fragment_consecutiveDay_recyclerView"
                    android:overScrollMode="never"
                    android:layout_width="415dp"
                    android:layout_height="128dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                    app:layout_constraintVertical_bias="0.827" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>