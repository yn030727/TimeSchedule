<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5b5b5"
    tools:context=".ui.MainActivity">
    <!--除去导航栏的总长是728-->

    <!--加载每一个不同组件Fragment的容器-->

    <FrameLayout
        android:id="@+id/main_maininterface_container"
        android:layout_width="match_parent"
        android:layout_height="728dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>


    <!--底部导航栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#f1f1f1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/app_navigation_schedule_btn"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/app_navigation_schedule"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.212" />

        <Button
            android:id="@+id/app_navigation_challenge_btn"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginStart="77dp"
            android:background="@drawable/app_navigation_challenge"
            app:layout_constraintBottom_toBottomOf="@+id/app_navigation_schedule_btn"
            app:layout_constraintStart_toEndOf="@+id/app_navigation_schedule_btn"
            app:layout_constraintTop_toTopOf="@+id/app_navigation_schedule_btn"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/app_navigation_social_btn"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginStart="77dp"
            android:background="@drawable/app_navigation_socializing"
            app:layout_constraintBottom_toBottomOf="@+id/app_navigation_challenge_btn"
            app:layout_constraintStart_toEndOf="@+id/app_navigation_challenge_btn"
            app:layout_constraintTop_toTopOf="@+id/app_navigation_challenge_btn"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/app_navigation_person_btn"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_marginStart="77dp"
            android:background="@drawable/app_navigation_person"
            app:layout_constraintBottom_toBottomOf="@+id/app_navigation_social_btn"
            app:layout_constraintStart_toEndOf="@+id/app_navigation_social_btn"
            app:layout_constraintTop_toTopOf="@+id/app_navigation_social_btn"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/app_navigation_schedule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="暂留芳华"
            app:layout_constraintEnd_toEndOf="@+id/app_navigation_schedule_btn"
            app:layout_constraintStart_toStartOf="@+id/app_navigation_schedule_btn"
            app:layout_constraintTop_toBottomOf="@+id/app_navigation_schedule_btn" />

        <TextView
            android:id="@+id/app_navigation_challenge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="石以砥焉"
            app:layout_constraintEnd_toEndOf="@+id/app_navigation_challenge_btn"
            app:layout_constraintStart_toStartOf="@+id/app_navigation_challenge_btn"
            app:layout_constraintTop_toBottomOf="@+id/app_navigation_challenge_btn" />

        <TextView
            android:id="@+id/app_navigation_social_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="一觞一咏"
            app:layout_constraintEnd_toEndOf="@+id/app_navigation_social_btn"
            app:layout_constraintStart_toStartOf="@+id/app_navigation_social_btn"
            app:layout_constraintTop_toBottomOf="@+id/app_navigation_social_btn" />

        <TextView
            android:id="@+id/app_navigation_person_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="舍间陋室"
            app:layout_constraintEnd_toEndOf="@+id/app_navigation_person_btn"
            app:layout_constraintStart_toStartOf="@+id/app_navigation_person_btn"
            app:layout_constraintTop_toBottomOf="@+id/app_navigation_person_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>