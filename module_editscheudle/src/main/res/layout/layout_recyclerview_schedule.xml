<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="#d5d5d5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editschedule_constraint"
            android:layout_width="337dp"
            android:layout_height="64dp"
            android:background="@drawable/editschdule_layout_shape1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.601"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.515">

            <ImageView
                android:id="@+id/editschedule_recyclerview_image"
                android:layout_width="44dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.086"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/editschedule_image_kuaidi" />

            <TextView
                android:id="@+id/editschedule_recyclerview_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="#111111"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/editschedule_recyclerview_image"
                app:layout_constraintStart_toEndOf="@+id/editschedule_recyclerview_image"
                app:layout_constraintTop_toTopOf="@+id/editschedule_recyclerview_image"
                app:layout_constraintVertical_bias="0.523"
                tools:text="取快递" />

            <ImageView
                android:id="@+id/editschedule_recyclerview_right_press"
                android:layout_width="21dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/editschedule_recyclerview_textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.847"
                app:layout_constraintStart_toEndOf="@+id/editschedule_recyclerview_textview"
                app:layout_constraintTop_toTopOf="@+id/editschedule_recyclerview_textview"
                app:layout_constraintVertical_bias="0.428"
                app:srcCompat="@drawable/calendar_layout_function" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>