<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginOneFragment"
    android:background="#f1f1f1">


    <EditText
        android:id="@+id/login_one_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:backgroundTint="#6f1820"
        android:ems="10"
        android:hint="请输入账号"
        android:inputType="phone"
        android:maxLines="1"
        android:textColorHint="#b5b5b5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_one_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#6f1820"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:textColorHint="#b5b5b5"
        app:layout_constraintEnd_toEndOf="@+id/login_one_account"
        app:layout_constraintStart_toStartOf="@+id/login_one_account"
        app:layout_constraintTop_toBottomOf="@+id/login_one_account" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:text="点 击 登 录"
        android:textColor="#f1f1f1"
        android:textSize="16sp"
        android:background="@drawable/btn_login_background"
        app:layout_constraintEnd_toEndOf="@+id/login_one_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/login_one_password"
        app:layout_constraintTop_toBottomOf="@+id/login_one_password" />

    <Button
        android:id="@+id/bn2"
        android:layout_width="91dp"
        android:layout_height="33dp"
        android:background="@null"
        android:gravity="center"
        android:text="注册账号"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

</androidx.constraintlayout.widget.ConstraintLayout>